<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>drools-planner-distribution</id>
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <includes>
        <include>../LICENSE-ASL-2.0.txt</include>
      </includes>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
      <outputDirectory/>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>dos</lineEnding>
      <filtered>true</filtered>
      <outputDirectory/>
      <includes>
        <include>**/*.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/docs</directory>
      <filtered>true</filtered>
      <outputDirectory/>
    </fileSet>
    <!-- Examples -->
    <fileSet>
      <directory>../drools-planner-examples</directory>
      <outputDirectory/>
      <includes>
        <include>data/**/input/*.*</include>
        <include>data/**/unsolved/*.xml</include>
        <include>data/**/solved/*.xml</include>
        <include>data/**/output/*.*</include>
      </includes>
    </fileSet>
  </fileSets>

  <moduleSets>
    <moduleSet>
      <includes>
        <!-- By including drools-planner-core it forgets the dependencies of drools-planner-examples (such as the logger) -->
        <!--<include>org.drools.planner:drools-planner-core</include>-->
        <include>org.drools.planner:drools-planner-examples</include>
      </includes>
      <binaries>
        <!-- The modules itself -->
        <outputDirectory>lib</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <!-- Their dependencies -->
          <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>

</assembly>
