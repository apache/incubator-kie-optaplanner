<?xml version="1.0" encoding="UTF-8"?>
<solver>
  <!--<environmentMode>FULL_ASSERT</environmentMode>--><!-- To slowly prove there are no bugs in this code -->
  <!-- To solve faster by saturating multiple CPU cores. Use value "AUTO" to let OptaPlanner calculate optimal
     move thread count.-->
  <moveThreadCount>2</moveThreadCount>

  <solutionClass>org.optaplanner.examples.meetingscheduling.domain.MeetingSchedule</solutionClass>
  <entityClass>org.optaplanner.examples.meetingscheduling.domain.MeetingAssignment</entityClass>

  <scoreDirectorFactory>
    <scoreDrl>org/optaplanner/examples/meetingscheduling/solver/meetingSchedulingScoreRules.drl</scoreDrl>
  </scoreDirectorFactory>

  <termination>
    <minutesSpentLimit>5</minutesSpentLimit>
  </termination>
</solver>
