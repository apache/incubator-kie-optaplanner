<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://www.optaplanner.org/xsd/solver" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://www.optaplanner.org/xsd/solver https://www.optaplanner.org/xsd/solver/solver.xsd">
  <environmentMode>FULL_ASSERT</environmentMode>
  <!--<moveThreadCount>AUTO</moveThreadCount>--><!-- To solve faster by saturating multiple CPU cores -->

  <solutionClass>org.optaplanner.examples.taskassigning.domain.TaskAssigningSolution</solutionClass>
  <entityClass>org.optaplanner.examples.taskassigning.domain.Employee</entityClass>
  <entityClass>org.optaplanner.examples.taskassigning.domain.Task</entityClass>

  <scoreDirectorFactory>
    <!--<constraintProviderClass>org.optaplanner.examples.taskassigning.optional.score.TaskAssigningConstraintProvider</constraintProviderClass>-->
    <scoreDrl>org/optaplanner/examples/taskassigning/solver/taskAssigningConstraints.drl</scoreDrl>
  </scoreDirectorFactory>

  <!--<termination>-->
    <!--<minutesSpentLimit>5</minutesSpentLimit>-->
  <!--</termination>-->
  <customPhase>
    <customPhaseCommandClass>org.optaplanner.examples.taskassigning.domain.solver.solution.initializer.RoundRobinInitializer</customPhaseCommandClass>
  </customPhase>
  <localSearch>
    <unionMoveSelector>
      <moveListFactory>
        <moveListFactoryClass>org.optaplanner.examples.taskassigning.domain.solver.move.factory.TaskListChangeMoveFactory</moveListFactoryClass>
      </moveListFactory>
      <moveListFactory>
        <moveListFactoryClass>org.optaplanner.examples.taskassigning.domain.solver.move.factory.TaskListSwapMoveFactory</moveListFactoryClass>
      </moveListFactory>
    </unionMoveSelector>
    <forager>
      <acceptedCountLimit>100</acceptedCountLimit>
    </forager>
  </localSearch>
</solver>
