            <selector>
                <selector>
                    <topSize>10</topSize>
                </selector>
                <selector>
                    <moveFactoryClass>org.drools.solver.examples.itc2007.examination.solver.move.factory.PeriodChangeExaminationMoveFactory</moveFactoryClass>
